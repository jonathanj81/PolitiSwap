<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/raised_button_darker_blue"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:right="2dp"
        android:left="2dp">
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/raised_button_lighter_blue"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:right="4dp"
        android:left="4dp">
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/colorPrimaryFull"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>